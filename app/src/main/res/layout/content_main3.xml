<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        tools:text="A"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_btn_2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/main_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_name"
        tools:text="B"
        app:layout_constraintTop_toTopOf="@id/main_btn"
        app:layout_constraintRight_toLeftOf="@id/main_btn_3"
        app:layout_constraintLeft_toRightOf="@id/main_btn" />

    <Button
        android:id="@+id/main_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        tools:text="A"
        app:layout_constraintTop_toTopOf="@id/main_btn"
        app:layout_constraintRight_toLeftOf="@id/main_btn_4"
        app:layout_constraintLeft_toRightOf="@id/main_btn_2" />

    <Button
        android:id="@+id/main_btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="B"
        android:text="@string/dev_name"
        app:layout_constraintTop_toTopOf="@id/main_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_btn_3" />

</androidx.constraintlayout.widget.ConstraintLayout>